{
  "name": "dictionary-scrapper",
  "version": "1.0.0",
  "description": "Scrape dictionaries such as Cambridge and Oxford to generate structured data for a given word search",
  "main": "dist/index.js",
  "browser": "dist/dictionary-scrapper.min.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack .",
    "rollup": "rollup -c",
    "ci": "npm run build && npm run check-format && npm run check-exports"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khshourov/dictionary-scrapper.git"
  },
  "keywords": [
    "OnlineDictionaryScrapper",
    "Pronunciation"
  ],
  "author": "Kamrul H Shourov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khshourov/dictionary-scrapper/issues"
  },
  "homepage": "https://github.com/khshourov/dictionary-scrapper#readme",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@eslint/js": "^9.13.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.13",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rollup": "^4.24.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  }
}
